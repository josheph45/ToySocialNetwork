<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.toysocialnetwork.controller.PendingsController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="150.0" layoutY="50.0" prefHeight="300.0" prefWidth="300.0" spacing="10.0">
            <children>
                <!-- Title -->
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Sent Requests" />

                <!-- Pending Requests Table -->
                <TableView fx:id="pendingsTableView" prefHeight="200.0" prefWidth="254.0">
                    <columns>
                        <!-- Recipient Username Column -->
                        <TableColumn fx:id="receiverUsernameColumn" prefWidth="120.0" text="Receiver Username" />

                        <!-- Action Buttons -->
                        <TableColumn fx:id="viewProfileColumn" prefWidth="60.0" text="View Profile" />
                        <TableColumn fx:id="deleteColumn" prefWidth="100.0" text="Cancel" />
                    </columns>
                </TableView>

                <!-- Refresh Button -->
                <Button fx:id="refreshButton" text="Refresh" style="-fx-font-size: 14px; -fx-padding: 5;" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
