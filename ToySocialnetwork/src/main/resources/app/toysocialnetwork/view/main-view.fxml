<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.toysocialnetwork.controller.MainController">
    <children>
        <VBox alignment="CENTER" layoutX="100.0" layoutY="50.0" prefHeight="300.0" prefWidth="400.0" spacing="20.0">
            <children>
                <!-- Welcome Label -->
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Welcome to Toy Social Network" />

                <!-- Logged-in User Label -->
                <Label fx:id="loggedInAsLabel" style="-fx-font-size: 18px;" text="Not logged in" />

                <!-- Buttons -->
                <VBox spacing="10.0" alignment="CENTER">
                    <children>
                        <Button fx:id="logOutButton" text="Log Out" style="-fx-font-size: 16px; -fx-padding: 10;" />
                        <Button fx:id="deleteAccountButton" text="Delete Account" style="-fx-font-size: 16px; -fx-padding: 10; -fx-background-color: #ff5555; -fx-text-fill: white;" />
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
