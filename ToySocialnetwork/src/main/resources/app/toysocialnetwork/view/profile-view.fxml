<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.toysocialnetwork.controller.ProfileController">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20">
            <children>
                <!-- Title -->
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Viewing profile of user:" />

                <!-- User Details -->
                <HBox alignment="CENTER_LEFT" spacing="20">
                    <children>
                        <Label fx:id="usernameLabel" style="-fx-font-size: 16px;" text="Username: " />
                        <Label fx:id="firstNameLabel" style="-fx-font-size: 16px;" text="First Name: " />
                        <Label fx:id="lastNameLabel" style="-fx-font-size: 16px;" text="Last Name: " />
                    </children>
                </HBox>

                <!-- Friends Table -->
                <VBox alignment="CENTER" prefWidth="530.0" spacing="10">
                    <Label style="-fx-font-size: 16px;" text="Friends:" />
                    <TableView fx:id="friendsTableView" prefHeight="250.0" prefWidth="535.0">
                        <columns>
                            <!-- Username Column -->
                            <TableColumn fx:id="usernameColumn" prefWidth="140.0" text="Username" />
                            <!-- First Name Column -->
                            <TableColumn fx:id="firstNameColumn" prefWidth="120.0" text="First Name" />
                            <!-- Last Name Column -->
                            <TableColumn fx:id="lastNameColumn" prefWidth="120.0" text="Last Name" />
                            <!-- Action Column -->
                            <TableColumn fx:id="viewProfileColumn" prefWidth="100.0" text="Action" />
                        </columns>
                        <VBox.margin>
                            <Insets left="10.0" right="10.0" />
                        </VBox.margin>
                    </TableView>
                    <VBox.margin>
                        <Insets left="28.0" right="28.0" />
                    </VBox.margin>
                </VBox>

                <!-- Action Button -->
                <Button fx:id="actionButton" style="-fx-font-size: 16px; -fx-padding: 10;" text="Action" />
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
